{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@ud/*": ["src/*"],
      "@ud/components/*": ["src/components/*"],
      "@ud/util/*": ["src/util/*"],
      "@ud/pages/*": ["src/pages/*"],
      "@ud/pages/home/*": ["src/pages/home/*"],
    },
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "moduleResolution": "node",
    "target": "ESNext",
    "module": "ESNext",
    "allowJs": true,
    "checkJs": true,
    "resolveJsonModule": true,
    "strict": false,
    "importHelpers": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "docs",
    "dist"
  ]
}
